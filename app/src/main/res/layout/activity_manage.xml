<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/textFunction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="102dp" />

            <TextView
                android:id="@+id/textStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="102dp" />

            <TextView
                android:id="@+id/textHouseNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="102dp" />

            <TextView
                android:id="@+id/textFlatNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="102dp" />

            <TextView
                android:id="@+id/textPostCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="102dp" />

            <TextView
                android:id="@+id/textCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="102dp" />

            <TextView
                android:id="@+id/textCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="102dp" />

            <TextView
                android:id="@+id/textCreationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="102dp" />

            <TextView
                android:id="@+id/textArchive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="102dp" />

            <TextView
                android:id="@+id/textLegalStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="102dp" />

            <TextView
                android:id="@+id/textType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="102dp" />

            <Button
                android:id="@+id/buttonAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AKCEPTUJ" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>